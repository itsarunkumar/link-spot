// }

// remote planetscale mysql db
datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String       @unique
  username    String       @unique
  email       String
  name        String?
  profilePic  String?
  createdAt   DateTime     @default(now())
  links       Link[]
  socialLinks SocialLink[]
}

model Link {
  id    String @id @default(cuid())
  url   String
  title String

  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}

enum SocialLinkType {
  TWITTER
  GITHUB
  LINKEDIN
  EMAIL
  INSTAGRAM
  FACEBOOK
}

model SocialLink {
  id        String         @id @default(cuid())
  url       String
  title     SocialLinkType
  createdAt DateTime       @default(now())
  User      User?          @relation(fields: [userId], references: [id])
  userId    String?
}
